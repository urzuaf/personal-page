---
import trabajos from "../data/trabajos.json";
---

<section id="trabajos" class="pb-40 w-full relative">
  <div class="p-20 m-auto sticky top-0 ">
    <h2 class="text-3xl md:text-5xl font-semibold text-center pt-10 text-white">
      Proyectos
    </h2>
  </div>
  <div
    class="p-4 flex flex-col justify-center gap-16 items-center flex-wrap mx-auto relative"
  >
    {
      trabajos.map((trabajo, index) => {
        const total = 224 +  index * 20 
        return (
          <div
            class={`max-w-lg border border-gray-800 bg-[#1A2029] sticky`}
            style={{ top: `${total}px` }}
          >
            <a href={trabajo.url}>
              <img
                class="rounded-t-lg"
                src={trabajo.img}
                alt={trabajo.nombre}
              />
            </a>
            <div class="p-5">
              <a href={trabajo.url}>
                <h5 class="mb-2 text-2xl font-bold tracking-tight text-white">
                  {trabajo.nombre}
                </h5>
              </a>
              <p class="mb-3 text-sm ">herramientas: {trabajo.tecnologias}</p>
              <p class="mb-3 font-normal ">{trabajo.descripción}.</p>
              <a
                href={trabajo.url}
                class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-b rounded-lg bg-[#2563EB] "
              >
                Saber más
                <svg
                  class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                  aria-hidden="true"
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 14 10"
                >
                  <path
                    stroke="currentColor"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M1 5h12m0 0L9 1m4 4L9 9"
                  />
                </svg>
              </a>
            </div>
          </div>
        );
      })
    }
  </div>
</section>
<style>
  .btn {
    position: relative;
    padding: 16px 36px;
    transition: 0.3s ease;
    background: #2563eb;
    color: #fff;
    border-radius: 20px;
  }
  .btn:hover {
    background: #2563eb;
    transition: 0.3s ease;
  }
  p {
    max-width: 50ch;
  }
</style>
