---
import animedoro from '../data/cocktails.json'
import Layout from '../components/Layout.astro';

//import animedoro_img from "../assets/ds_tracker.webp" 
//import {Image} from 'astro:assets';
---
<Layout title='Dark souls tracker'>
        <section class="flex flex-col items-center gap-4 py-40" >
            <h1 class="text-3xl md:text-5xl font-semibold text-white" >{animedoro.title}</h1>
            <h4 class="text-[#2563EB]">Herramientas : {animedoro.Herramientas}</h4>
            <div class="px-8 flex flex-col gap-8 py-8 ">
                <h3 class="text-xl md:text-2xl font-medium text-center text-white">Problema</h3> 
                <p>{animedoro.problem}</p>
                <h3 class="text-xl md:text-2xl font-medium text-center text-white">Desarrollo</h3> 
                <p>{animedoro.Desarrollo}</p>
                <a class="btn  rounded p-4 text-center mb-4" href={animedoro.url} target="_blank" >Ver en vivo</a>
            </div>
        </section>
</Layout>

<style>
    img{
        width: 100vw;
        padding-top:0 ;
        opacity: 0.8;
        margin-bottom: 4rem;
    }
    p{
        max-width: 55ch;
    }
    	.btn {
		position: relative;
		padding: 16px 36px;
		transition: 0.3s ease;
		background: #2563EB;
		color: white;
		border-radius: 20px;
	}
	.btn:hover {
		background: #2563EB;
		transition: 0.3s ease;
	}
 
</style>