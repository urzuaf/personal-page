---
import animedoro from '../data/dsTracker.json'
import Layout from '../components/Layout.astro';

import animedoro_img from "../assets/ds_tracker.webp" 
import {Image} from 'astro:assets';
---
<Layout title='Dark souls tracker'>
    <div class="py-10 border ">
        <section class="flex flex-col items-center gap-4" >
            <a href={animedoro.url} target="_blank">
			    <Image quality={"mid"} src={animedoro_img} alt={animedoro.title} />
            </a>
            <h1 class="text-2xl md:text-5xl font-semibold" >{animedoro.title}</h1>
            <h4 class="text-zinc-500">Herramientas : {animedoro.Herramientas}</h4>
            <div class="px-8 flex flex-col gap-8 py-8 ">
                <h3 class="text-xl md:text-2xl font-medium text-center">Problema</h3> 
                <p>{animedoro.problem}</p>
                <h3 class="text-xl md:text-2xl font-medium text-center">Desarrollo</h3> 
                <p>{animedoro.Desarrollo}</p>
                <a class="btn  rounded p-4 text-center mb-4" href={animedoro.url} target="_blank" >Ver en vivo</a>
            </div>
        </section>
    </div>
</Layout>

<style>
    img{
        width: 100vw;
        padding-top:0 ;
        opacity: 0.8;
        margin-bottom: 4rem;
    }
    p{
        max-width: 55ch;
    }
    .btn{
		position: relative;
		border: 2px solid #2aea7d;
		padding: 16px 32px;
		transition: .3s ease;
	}
	.btn:hover{
		background: #2aea7d;
		transition: .3s ease;
	}
</style>